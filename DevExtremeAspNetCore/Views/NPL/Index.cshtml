@model IEnumerable<DevExtremeAspNetCore.ViewModels.NPLViewModel>
@using Newtonsoft.Json

@{
    ViewBag.Title = "Danh sách NPL";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/npl.css" rel="stylesheet" />
<link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css" />


<div class="container">
    <div id="gridContainer" style="margin-top:20px;"></div>
</div>

<!-- Popup thêm/sửa -->
<div id="popupNPL" style="display:none;">
    <form>
        <div class="form-npl">
            <div class="form-row">
                <div class="form-group">
                    <label>Tên nguyên phụ liệu</label>
                    <input type="text" name="TenNpl" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Màu</label>
                    <div id="ColorNpl"></div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group">
                    <label>Loại</label>
                    <div id="Loai"></div>
                </div>
                <div class="form-group">
                    <label>Đơn vị</label>
                    <div id="DonVi"></div>
                </div>
                <div class="form-group">
                    <label>Số lượng</label>
                    <input type="number" name="SoLuong" class="form-control" min="0" required />
                </div>
            </div>
        </div>

        <div class="image-uploader-card">
            <label class="section-label">📸 Hình ảnh</label>

            <!-- Input ẩn -->
            <input type="file" id="cameraInput" style="display:none;" accept="image/*" capture="environment" />
            <input type="file" id="fileInput" style="display:none;" accept="image/*" multiple />

            <div class="button-group">
                <button type="button" id="btnOpenCamera" class="btn btn-camera">Mở Camera</button>
                <button type="button" id="btnUploadImage" class="btn btn-upload">Upload ảnh</button>
                <button type="button" id="btnCapture" class="btn btn-capture" style="display:none;">Chụp ảnh</button>
                <button type="button" id="btnCloseCamera" class="btn btn-close" style="display:none;">Đóng Camera</button>
            </div>

            <video id="videoCam" autoplay playsinline class="video-cam"></video>
            <canvas id="canvasPhoto" style="display:none;"></canvas>

            <div id="imagePreview" class="preview-container"></div>
        </div>

        <div class="file-uploader-card">
            <label class="section-label">📂 Chọn file</label>
            <input type="file" name="FilesNPL" id="FilesNPL" multiple />
            <div id="filePreview" class="preview-container"></div>
        </div>

    </form>
</div>
<div id="popupUploadImage"></div>

@* PopUp Xem ảnh *@
<div id="popupImageViewer" style="display:none;">
    <div id="imageList" style="display:flex; flex-wrap:wrap; gap:10px;"></div>
</div>
<!-- Popup xem file --> 
<div id="popupFileViewer" style="display:none;"> 
    <ul id="fileList" style="list-style:none; padding:0;"></ul> 
</div>
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>
    <script src="~/js/npl.js"></script>
    <script>
        $(function(){
            var data = @Html.Raw(JsonConvert.SerializeObject(Model));
            var token = $('input[name="__RequestVerificationToken"]').val();
            var uploadUrl = '@Url.Action("UploadImageTemp", "NPL")';
            NPL.init(data, token, uploadUrl);
        });
    </script>
    <script>
        // Mở camera
        document.getElementById("openCameraBtn").addEventListener("click", function () {
            document.getElementById("cameraInput").click();
        });

        // Preview ảnh từ camera
        document.getElementById("cameraInput").addEventListener("change", function (event) {
            previewImages(event.target.files);
        });

        // Preview ảnh từ upload
        document.getElementById("uploadInput").addEventListener("change", function (event) {
            previewImages(event.target.files);
        });

        function previewImages(files) {
            const preview = document.getElementById("imagePreview");
            preview.innerHTML = "";
            for (let file of files) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    const img = document.createElement("img");
                    img.src = e.target.result;
                    preview.appendChild(img);
                };
                reader.readAsDataURL(file);
            }
        }
    </script>
    <script>$("#Layer_1").click();</script>
}
