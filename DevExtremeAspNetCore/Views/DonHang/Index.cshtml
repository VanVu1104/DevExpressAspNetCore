@model IEnumerable<DevExtremeAspNetCore.ViewModels.DonHangViewModel>

@{
    ViewBag.Title = "Đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Đơn hàng</title>
    <link rel="stylesheet" href="~/css/DonHangList.css" asp-append-version="true" />
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <div class="donhang-container">
        <h2>Đơn hàng</h2>
        <button class="btn btn-add" onclick="openModal('/DonHang/Create', 'Thêm đơn hàng')">Thêm đơn hàng</button>
        <br /><br />

        <table id="donhangTable" class="donhang-table">
            <thead>
                <tr>
                    <th rowspan="2">ID</th>
                    <th rowspan="2">Tên đơn hàng</th>
                    <th rowspan="2">Ngày đặt</th>
                    <th rowspan="2">Khách hàng</th>
                    <th rowspan="2">Product</th>
                    <th rowspan="2">Color</th>
                    <th rowspan="2">Ảnh</th>
                    <th rowspan="2">File</th>
                    <th colspan="7">Size</th>
                    <th rowspan="2">Tổng SL</th>
                    <th rowspan="2">Thao tác</th>
                </tr>
                <tr>
                    <th>XXS</th>
                    <th>XSM</th>
                    <th>SM</th>
                    <th>MED</th>
                    <th>LRG</th>
                    <th>XLG</th>
                    <th>XXL</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
        <div class="pagination-wrapper">
            <div class="pagination-controls">
                <label for="rowsPerPage">Số dòng:</label>
                <select id="rowsPerPage" onchange="changeRowsPerPage(this.value)">
                    <option value="5">5</option>
                    <option value="10" selected>10</option>
                    <option value="20">20</option>
                    <option value="50">50</option>
                </select>
            </div>

            <div id="pagination" class="pagination-container"></div>
        </div>

    </div>
    <script>
        window.contentPath = '/images/';
    </script>
    <script src="@Url.Content("~/Scripts/DonHangList.js")"></script>
</body>
</html>

